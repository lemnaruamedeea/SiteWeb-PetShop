<section id="galerie">
  <div id="grid-galerie">
      <% let count = 0; %>
      <% for (let imag of locals.imagini) {
          const now = new Date();
          const minute = now.getMinutes();
          const quarter = Math.floor(minute / 15);
          const v = ["1", "2", "3", "4"]; 
          if (imag.sfert_ora && imag.sfert_ora.includes(v[quarter]) && count < 10) { %>
          <figure>
            <picture>
              <source srcset="<%- imag.fisier_mediu %>" media="(max-width:1000px)" />
              <img src="<%- imag.fisier %>" alt="imagine">
            </picture>
            <figcaption><%- imag.descriere %></figcaption>
          </figure>
          <% count++; %>
          <div id = "gol"></div>
          <div id = "gol2"></div>
        <% }
      } %>
    </div>
</section>